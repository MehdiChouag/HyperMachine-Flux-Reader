<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.mehdichouag.hypemachine.activity.DetailActivity">

    <ImageView
        android:src="@drawable/ic_launcher"
        android:layout_alignParentLeft="true"
        android:id="@+id/cover_track"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <LinearLayout
        android:layout_toRightOf="@+id/cover_track"
        android:paddingLeft="@dimen/header_padding_left"
        android:orientation="vertical"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="ARTIST"
            android:textSize="@dimen/artist_size_text"
            android:layout_gravity="center_horizontal"
            android:id="@+id/artist_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="TITLE"
            android:layout_marginTop="@dimen/title_margin_top"
            android:id="@+id/title_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="1"
                android:layout_marginRight="@dimen/date_margin_right"
                android:id="@+id/date_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=" 1"
                android:drawableLeft="@drawable/heart"
                android:id="@+id/love_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="LALA"
        android:layout_marginTop="@dimen/description_margin_top"
        android:layout_below="@+id/cover_track"
        android:id="@+id/description_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
